<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✏️ Sửa lịch học"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/edtClassNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên lớp"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtSubjectEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Môn học"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtLessonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bài học"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtTimeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời gian"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnUpdateSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnCancelEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
